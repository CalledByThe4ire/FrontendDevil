/* Variables
	 ========================================================================== */
//== Colors
//
$gray-base ?=				#000
$gray-darker ?=				lighten($gray-base, 13.5) // #222
$gray-dark ?=				lighten($gray-base, 20)   // #333
$gray ?=					lighten($gray-base, 33.5) // #555
$gray-light ?=				lighten($gray-base, 46.7) // #777
$gray-lighter ?=			lighten($gray-base, 93.5) // #eee

$base-color ?=				$text-color
$text-color ?= 				#283645
$secondary-color ?=			#d22856

$bg-body ?=					#fff



//== Typography
//
$font-size ?=				1.8rem

$font-family--sans-serif ?=	"Helvetica Neue", Helvetica, Arial, sans-serif
$font-family--serif ?=		Georgia, "Times New Roman", Times, serif
$font-family--monospace ?=	Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace

$font-family ?=				$font-family--sans-serif



//== Grid
//
$grid-columns ?=			12
$gutter ?=					2rem



//== Lost
// https://github.com/peterramsing/lost
@lost flexbox				flex
@lost gutter				2rem



//== Media queries breakpoints
//
$mobile ?=					"only screen and (max-width: 699px)"
$tablet ?=					"only screen and (min-width: 700px) and (max-width: 1019px)"
$desktop ?=					"only screen and (min-width: 1020px)"

$retina2x ?=				"(min-resolution: 1.5dppx)"

// mobile + tablet
$portable ?=				"only screen and (max-width: 1019px)"
// tablet + desktop = more than mobile
$tab-desk ?=				"only screen and (min-width: 700px)"

$desk-xl ?=					"(min-width: 1400px)"



//== Container sizes
//
$container--min ?=			32rem //320px
$container--mid ?=			70rem //700px
$container--max ?=			102rem //1020px



//== Paddings and margins
//
$offset--mobile ?=			2rem
$offset--tablet ?=			4rem
$offset--desktop ?=			4rem
